{
  "extends": [
    "standard",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "react",
    "@typescript-eslint",
    "react-hooks",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "tsx": true
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    //no punto y comas
    "semi": ["error", "never"],
    //no espacios en blanco al final de la linea
    "no-trailing-spaces": "error",
    //no comillas dobles
    "quotes": ["error", "single"],
    "no-unused-vars": "warn",
    "no-undef": "off",
    // no any types
    "@typescript-eslint/no-explicit-any": "error",
    
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none",
        "endOfLine": "auto",
        "no-unused-vars": "warn"
      }
    ]
  }

}